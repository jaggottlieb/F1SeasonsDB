{{!-- Create a table --}}
<table id="GrandPrixTeams_table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the driver_id, driver_name, driver_country, lifetime_points, lifetime_wins,
        lifetime_poles, and Teams_team_id, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.year}}</td>
            <td>{{this.race_name}}</td>
            <td>{{this.team_name}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>