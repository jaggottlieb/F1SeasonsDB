    <a href="GrandPrixTeams.hbs">Grand Prix Teams</a>
</nav>

{{!-- Create a table --}}
<table id="principals_table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the principal_id, principal_name, and Teams_team_id, in order --}}
        {{#each data}}
        <tr data-value={{this.principal_id}}>
            <td>{{this.principal_id}}</td>
            <td>{{this.principal_name}}</td>
            <td>{{this.Teams_team_id}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<form id="add_principal_form">
    <fieldset>
        <legend>Add a F1 Principal</legend>
        <p>
            <label for="add_principal_name">Name</label>
            <input type="text" id="add_principal_name" name="add_principal_name" required placeholder="Joe Smith">
        </p>
        <p>
            <label for="add_Teams_team_id">Team ID</label>


            <select id="add_Teams_team_id" name="add_Teams_team_id">
                <option value="">Select a Team</option>
                {{#each teams}}
                <option value="{{this.team_id}}">{{this.team_name}}</option>
                {{/each}}

            </select>
        </p>
        <input type="submit">
    </fieldset>
</form>

<script src="./js/add_principal.js"></script>

